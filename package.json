{
    "name": "hex-fmt",
    "displayName": "hex-fmt",
    "description": "Intel hex format language",
    "version": "0.0.1",
    "publisher": "kevroc",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [{
            "id": "hex"
        }],
        "grammars": [{
            "language": "hex",
            "scopeName": "text.hex",
            "path": "./syntaxes/hex.tmLanguage"
        }],
        "commands": [{
            "command": "extension.sayHello",
            "title": "Hello World"
        }]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}